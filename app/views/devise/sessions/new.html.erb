<div class = "columns is-centered mt-6">
    <div class = "column is-one-third">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "label"  %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",style: "margin: 0px; width:583.6px; height: 50px;"  %>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %><br />
          <%= f.password_field :password, autocomplete: "current-password",style: "margin: 0px; width:583.6px; height: 50px;" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in",class: 'button is-primary' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>

