<h1>Pending Brokers</h1>
<%# Admin Page (for Broker status) %>
    <% if user_signed_in? %>
     <% if current_user.role_id === 1 %>
      <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>EMAIL</th>
              <th>ROLE</th>
              <th>STATUS</th>
            </tr>
          </thead>

          <tbody>
              <% User.all.each do |broker| %>
                <tr>
                  <% if broker.role_id === 2 %>
                    <td><%= broker.id %></td>  
                    <td><%= broker.email %></td>  
                    <td><%= Role.find_by(id: broker.role_id).name %></td>  
                    <td><%= broker.status_approved ? "approved" : "pending" %></td>
                    <% if broker.status_approved === false %>
                    <td><%= link_to 'approve', user_path(broker.id), method: :patch %></td>
                    <td><%= link_to 'decline' %></td>
                    <% else %>
                    <% end %>
                    
                   <% else %>
                  <% end %>  
                </tr>
              <% end %>
          </tbody>

       </table>
       <% else %>
      <% end %>
      <% else %>
      <% end %>
    
