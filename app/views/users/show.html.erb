<h3 class="title"><%= @user.email %></h3>
<span class="subtitle">
    Role:     
    <% if @user.role_id === 1 %>
        Admin
    <% elsif @user.role_id === 2 %>
        Broker
    <% else %>
        Buyer
    <% end %>
</span>

<br /><br />

<% @client = IEX::Api::Client.new(
    publishable_token: 'pk_3fac9a23e6694fdcb684099ec25cf67b',
    secret_token: 'sk_9d27a9ab69c64168ad4fad54cf700ecb',
    endpoint: 'https://cloud.iexapis.com/v1'
)%>

<table class="table">
    <thead>
        <th>Company</th>
        <th>Latest Price</th>
        <% if user_signed_in? && current_user.role_id === 2 %>
            <% if current_user.status_approved? %>
                <th>broker options</th>
            <% end %>
        <% end %>
    </thead>
    <tbody>
        <h1 class="title">Stocks for Sale</h1>

        <% @stocks = @user.stocks %>

        <%@stocks.each do |stock| %>
            <tr>
                <% quote = @client.quote(stock.symbol) %>
                <td> <%= "#{stock.symbol}" %> </td>
                <td> <%= "#{quote.latest_price}" %> </td>
                <% if user_signed_in? && current_user.role_id === 2 && current_user.status_approved? %>
                    <td>
                        remove
                    </td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
<table>

