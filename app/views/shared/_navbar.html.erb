<nav class="navbar is-primary" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    
    <%= link_to image_tag("https://i.ibb.co/P67W6Jb/output-onlinepngtools-2.png", border: 0), root_path, class: "navbar-item" %>
    <div role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <div class="brokr-burger"> &#9776; </div>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">

      <div class="navbar-start">
        <div class="navbar-item">
          <%= link_to "Home", root_path, class: "navbar-item" %>
          <%= link_to "Connect with Brokers", user_stocks_path, class: "navbar-item"%>
          <% if user_signed_in? %>
            <% if current_user.role_id === 1 %>
              <%= link_to 'Pending Brokers', users_path, class: "navbar-item" %>
            <% end %>
            <%# if admin => show pending brokers; else, show profile %>
            <% if current_user.role_id === 1 %>
              <%= link_to 'Pending Brokers', users_path, class: "navbar-item" %>
              <% else %>
              <%= link_to 'Profile', user_path(current_user.id), method: :get, class: 'navbar-item'%>
            <% end %>
            <%# admin => show all transactions || buyer/broker => show current_user transactions %>
            <%= link_to 'Transactions', transaction_path(current_user.id), method: :get, class: 'navbar-item'%>
          <% end %>
        </div>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <% if user_signed_in? %>
            <%= link_to current_user.email, user_path(id: current_user.role_id), class: "is-light" %> &nbsp;|
            <%= Role.find_by(id: current_user.role_id).name %> |
            <% if (current_user.role_id === 2) %>
              <%= current_user.status_approved ? "approved" : "pending" %> |&nbsp;
            <% end %>
            <%= link_to 'user settings', edit_user_registration_path, class: "is-light" %> &nbsp;|&nbsp;
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "is-light" %>
          <% else %>
            <div class="buttons">
              <%= link_to "Sign Up", new_user_registration_path, class: "button is-primary" %>
              <%= link_to "Log In", new_user_session_path, class: "button is-light" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {

    // Get all "navbar-burger" elements
    const $navbarBurgers = Array.prototype.slice.call(document.querySelectorAll('.navbar-burger'), 0);

    // Check if there are any navbar burgers
    if ($navbarBurgers.length > 0) {

      // Add a click event on each of them
      $navbarBurgers.forEach( el => {
        el.addEventListener('click', () => {

          // Get the target from the "data-target" attribute
          const target = el.dataset.target;
          const $target = document.getElementById(target);

          // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
          el.classList.toggle('is-active');
          $target.classList.toggle('is-active');

        });
      });
    }

  });
</script>